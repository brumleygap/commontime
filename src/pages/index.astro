---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="CommonTime">
  <section class="mx-auto max-w-5xl px-4 py-16 text-center">
    <h2 class="text-3xl font-bold tracking-tight">
      Find a time that works
    </h2>

    <p class="mt-4 text-slate-600">
      Pick dates. Share a link. See what works.
    </p>

    <div class="mt-8">
      <a
        href="/create"
        class="inline-flex items-center rounded-md bg-red-600 px-6 py-3 text-white font-semibold hover:bg-red-700"
      >
        Create a Poll
      </a>
    </div>
  </section>
</BaseLayout>